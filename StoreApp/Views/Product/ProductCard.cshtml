@model IQueryable<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoryList")
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (Product prd in Model)
            {
                <div class="col-md-4 mt-3">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="@prd?.ImageUrl" alt="Card image cap" height="330">
                        <div class="card-body">
                            <h5 class="card-title">@prd?.ProductName</h5>
                            <p class="card-text">
                                Some quick example text to build on the card title and make up the bulk of the
                                card's
                                content.
                            </p>

                            <div class="row">
                                <div class="col-md-3">
                                    <form id="@prd?.ProductId" asp-page="/Cart" method="post">
                                       @*  uygulama burada patlýyor *@
                                        <input type="hidden" name="ProductId" value="@prd.ProductId" />
                                        <input type="hidden" name="returnUrl" value="/Product/Get/@prd?.ProductId" />
                                        <button class="btn btn-outline-primary"><i class="fa fa-cart-plus"></i></button>
                                    </form>
                                </div>
                                <div class="col-md-9">
                                    <a asp-action="Get" asp-controller="Product" asp-route-id="@prd?.ProductId" class="btn btn-primary"><i class="fa-solid fa-arrow-right"></i> Details</a>
                                </div>


                            </div>

                        </div>
                    </div>
                </div>


            }
        </div>
    </div>

</div>
