
@model Product
@{
    ViewData["Title"] = "ProductDetail";
}

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h6 class="display-6">@Model?.ProductName</h6>
            <img class="img-fluid shadow rounded-3" src="@Model?.ImageUrl" alt="@Model?.ProductName" width="500" />
            <h3 class=" my-4">@Model?.Price.ToString("c")</h3>
        </div>
        
    </div>
</div>
<div class="text-center">
    <div class="btn-group">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">
            <i class="fa-solid fa-house"></i>
            Home
        </a>
        <form id="@Model?.ProductId" asp-page="/cart" method="post">
            <input type="hidden" name="ProductId" value="@Model?.ProductId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn btn-outline-secondary rounded-0">
                <i class="fa fa-cart-plus"></i>
                Add To Cart
            </button>
        </form>
        <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="ProductCard">
            <i class="fa-solid fa-list"></i>
            Products
        </a>
    </div>
</div>

