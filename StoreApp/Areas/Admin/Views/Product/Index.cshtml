@model IEnumerable<Product>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Product";
}

<h1>Product</h1>
<br>
<div class="container my-5">
    <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-outline-secondary form-control">+ Create Poduct</a>
</div>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>#</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product prd in Model)
        {
            <tr>
                <th>@prd.ProductId</th>
                <th><img class="border rounded-circle shadow border-dark" src="@prd?.ImageUrl" style="width:50px; height:50px;" /></th>
                <td>@prd.ProductName</td>
                <td>@prd.CategoryId</td>
                <td>@prd.Price.ToString("c")</td>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.ProductId">
                        <i class="fa fa-search"></i>
                        Detail</a>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@prd.ProductId">
                        <i class="fa fa-edit"></i> 
                        Edit
                        </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prd.ProductId">
                        <i class="fa fa-trash"></i>
                        Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>