@model ProductDtoForInsertion
@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<h1>Create</h1>

<div class="container my-5">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary=All class="text-danger"></div>
        <div class="form-group my-2">
            <input asp-for="ProductName" placeholder="Product Name" class="form-control" />
        </div>
        <div class="form-group my-2">
            <input asp-for="Price" placeholder="Price" class="form-control" />
        </div>
        <div class="form-group my-2">
            <input asp-for="Summary" placeholder="Summary" class="form-control" />
        </div>
        <div class="form-group my-2">
            <label>Image Url</label>
            <input name="file" type="file" placeholder="ImageUrl" class="form-control" />
        </div>
        <div class="form-group my-2">
            <select class="form-control" asp-for="CategoryId">
                <option selected>Select</option>
                @foreach (Category item in ViewBag.Categories)
                {
                    <option value="@item.CategoryId">@item.CategoryName</option>
                }
            </select>
        </div>
        <div class="form-group my-2">
           <button class="btn btn-success">
               <i class="fa fa-save"></i>
               Save
               </button>
               <a asp-area="Admin" asp-action="Index" asp-controller="Product" class="btn btn-outline-danger">
                <i class="fa fa-list"></i>
                   Products</a>
        </div>
    </form>
</div>

